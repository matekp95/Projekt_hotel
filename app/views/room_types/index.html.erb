<p id="notice"><%= notice %></p>

<h1>Room Types</h1>
<div id="text_center">
  <div id="display_inline">
    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Cost</th>
        <th>Max people</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @room_types.each do |room_type| %>
        <tr>
          <td><%= room_type.name %></td>
          <td><%= room_type.cost %></td>
          <td><%= room_type.max_people %></td>
          <td><%= link_to 'Show', room_type %></td>
          <% if current_user.present? && current_user.user_role == 'admin' %>
            <td><%= link_to 'Edit', edit_room_type_path(room_type) %></td>
            <td><%= link_to 'Destroy', room_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>

    <br>

<%#= link_to 'New Room Type', new_room_type_path %>
  </div>
</div>

